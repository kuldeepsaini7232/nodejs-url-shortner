<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shortner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <div class="container">
   <h1 class="my-3 text-success">Url Shortner</h1>

   <form method="post" action="/shortUrls" class=" my-5 ">
    <label for="fullUrl">Enter url here</label>
    <input type="url" name="fullUrl" id="fullUrl" placeholder="Url" required
    class="form-control col mr-2">
     <button class="btn btn-success mt-2">Short Url</button>
   </form>
   <table class="table table-striped table-responsive">
       <thead>
           <tr>
               <th>Full Url</th>
               <th>Short Url</th>
               <th>No of Clicks</th>
           </tr>
       </thead>
       <tbody>
        <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
              <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
              <td><%= shortUrl.clicks %></td>
            </tr>
          <% }) %>
       </tbody>
   </table>
</div>
</html>